doctype html
include parts/links-in-header

link(href='https://fonts.googleapis.com/css?family=Roboto:400,700,900&display=swap' rel='stylesheet')
link(rel='stylesheet' href='../assets/css/style.css')
link(rel='stylesheet' href='../assets/css/post.css')


.content
  .container
    .row.align-items-stretch.justify-content-center.no-gutters
      .col-md-7
        .form.h-100.contact-wrap.p-5
          h3.text-center შაბლონის შექმნა
          form#contactForm.mb-5(action='/post' method='POST' enctype="multipart/form-data" name='contactForm')
            .row
              .col-md-6.form-group.mb-3
                label.col-form-label ავტორი
                input#name.form-control(for='author' type='text' name='author' value=qs.author placeholder='ავტორის სახელი')
            .row.mb-5
              .col-md-12.form-group.mb-3
                label.col-form-label განცხადება
                textarea#message.form-control(for='message' name='message' value=qs.message cols='30' rows='4' placeholder='დაწერე განცხადება')
            .form-group
                label სურათის ატვირთვა
                input#exampleFormControlFile1.form-control-file(for='image' name='image' value=image type='file')
            .row.justify-content-center
              .col-md-5.form-group.text-center
                input.btn.btn-block.btn-primary.rounded-0.py-2.px-4(type='submit' value='შექმნა') 
                span.submitting


script(src='../assets/js/jquery-3.3.1.min.js')
script(src='../assets/js/jquery.validate.min.js')
script(src='../assets/js/main.js')
